{
  "name": "extension",
  "private": true,
  "version": "1.0.5",
  "type": "module",
  "scripts": {
    "dev": "bun run clear && cross-env NODE_ENV=development concurrently \"bun run dev:prepare\" \"bun run dev:background\" \"bun run dev:web\" \"bun run dev:js\"",
    "dev-firefox": "bun run clear && cross-env NODE_ENV=development EXTENSION=firefox concurrently \"bun run dev:prepare\" \"bun run dev:background\" \"bun run dev:web-firefox\" \"bun run dev:js\"",
    "dev:prepare": "bun run scripts/prepare.ts",
    "dev:background": "bun run build:background -- --mode development",
    "dev:web": "vite",
    "dev:web-firefox": "bun run build:web -- --mode development",
    "dev:js": "bun run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production bun run clear && bun run build:web && bun run build:prepare && bun run build:background && bun run build:js",
    "build:firefox": "cross-env NODE_ENV=production EXTENSION=firefox bun run clear && bun run build:web && bun run build:prepare && bun run build:background && bun run build:js",
    "build:prepare": "bun run scripts/prepare.ts",
    "build:background": "vite build --config ./vite.config.background.ts",
    "build:web": "vite build",
    "build:js": "vite build --config ./vite.config.content.mts",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "bun run scripts/clear.ts",
    "clean": "rm -rf .dist node_modules",
    "preview": "vite preview",
    "ladle:dev": "ladle serve",
    "ladle:build": "ladle build",
    "ladle:preview": "ladle preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "prepare": "bun run scripts/prepare.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.1",
    "@ladle/react": "^2.17.2",
    "@nextui-org/react": "^2.1.13",
    "@types/webextension-polyfill": "^0.12.3",
    "@types/ws": "^8.18.0",
    "clsx": "^1.2.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.16.4",
    "fs-extra": "^11.3.0",
    "lucide-react": "^0.378.0",
    "nanoid": "^5.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.15.0",
    "terser": "^5.39.0",
    "use-file-picker": "^2.1.0",
    "vite-plugin-environment": "^1.1.3",
    "webextension-polyfill": "^0.12.0",
    "ws": "^8.18.1",
    "zod": "^3.20.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.244",
    "@types/file-saver": "^2.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/ui": "^0.31.4",
    "jsdom": "^22.1.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.4"
  }
}

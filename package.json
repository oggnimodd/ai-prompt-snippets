{
  "name": "ai-prompt-snippets",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prepare": "bun prepare.js",
    "pre-commit": "bunx lint-staged",
    "lint": "biome check .",
    "lint:apply": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "e2e": "playwright test",
    "e2e:headless": "PLAYWRIGHT_HEADLESS=true playwright test"
  },
  "dependencies": {
    "@playwright/test": "^1.39.0",
    "delay": "^6.0.0",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@biomejs/cli-linux-x64": "^1.3.1",
    "cypress": "13.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,json}": [
      "biome check --apply .",
      "biome format --write ."
    ]
  },
  "workspaces": [
    "apps/extension",
    "apps/docs",
    "packages/config/tailwind",
    "packages/ui",
    "packages/types"
  ],
  "trustedDependencies": ["playwright"]
}

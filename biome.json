{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": [
      "**/node_modules/**/*.*",
      "**/dist/**/*.*",
      "**/.next/**/*.*",
      "**/.expo/**/*.*",
      "**/.cache/**/*.*",
      "**/build/**/*.*",
      ".devcontainer/**/*.*",
      "**/public/precache.*.*.js",
      "**/public/sw.js",
      "**/public/workbox-*.js",
      "**/public/worker-*.js",
      "**/public/fallback-*.js",
      "**/public/precache.*.*.js.map",
      "**/public/sw.js.map",
      "**/public/workbox-*.js.map",
      "**/public/worker-*.js.map",
      "**/public/fallback-*.",
      "**/.astro"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "ignore": [
      "**/node_modules/**/*.*",
      "**/dist/**/*.*",
      "**/.next/**/*.*",
      "**/.expo/**/*.*",
      "**/.cache/**/*.*",
      "**/build/**/*.*",
      ".devcontainer/**/*.*",
      "**/public/precache.*.*.js",
      "**/public/sw.js",
      "**/public/workbox-*.js",
      "**/public/worker-*.js",
      "**/public/fallback-*.js",
      "**/public/precache.*.*.js.map",
      "**/public/sw.js.map",
      "**/public/workbox-*.js.map",
      "**/public/worker-*.js.map",
      "**/public/fallback-*.",
      "**/.astro"
    ]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "trailingCommas": "all",
      "quoteStyle": "double"
    }
  }
}
